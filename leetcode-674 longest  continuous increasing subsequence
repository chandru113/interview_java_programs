class Solution {
    public int findLengthOfLCIS(int[] nums) {
        int m=0;
        int h=nums[0];
        int t=0;
        for(int i=1;i<nums.length;i++){
            if(nums[i]>h){
                t++;
                h=nums[i];
            }
            else{
                m=Math.max(t,m);
                t=0;
                h=nums[i];
            }
        }
        m=Math.max(t,m);
        if(m==0) m=1;
        else if(m>=1) m=m+1;
        return m;
    }
}
